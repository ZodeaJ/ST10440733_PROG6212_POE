@model List<ProgFinalPoe.Models.Claim>

@{
    ViewData["Title"] = "Verify Claims";
}

<style>
    .btn-professional-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        font-weight: 500;
    }

        .btn-professional-primary:hover {
            background: linear-gradient(135deg, #5a6fd8 0%, #6a4190 100%);
            color: white;
        }
</style>

<h2 class="mb-4" style="color: #333; font-weight: 600; border-bottom: 2px solid #667eea; padding-bottom: 10px;">Verify Forwarded Claims</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>Claim ID</th>
                    <th>Lecturer</th>
                    <th>Month</th>
                    <th>Hours</th>
                    <th>Amount</th>
                    <th>Description</th>
                    <th>Forwarded</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var claim in Model)
                {
                    <tr>
                        <td>@claim.ClaimId</td>
                        <td>@claim.Lecturer.Name</td>
                        <td>@claim.Month</td>
                        <td>@claim.HoursWorked</td>
                        <td>R @claim.Amount.ToString("F2")</td>
                        <td>@claim.Description</td>
                        <td>@claim.CreatedAt.ToString("yyyy-MM-dd")</td>
                        <td>
                            <button type="button" class="btn btn-success btn-sm" data-bs-toggle="modal" data-bs-target="#approveModal@(claim.ClaimId)">
                                Approve
                            </button>
                            <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#rejectModal@(claim.ClaimId)">
                                Reject
                            </button>
                            <a href="@Url.Action("ViewDocument", "Claim", new { claimId = claim.ClaimId })" class="btn btn-info btn-sm" target="_blank">
                                View Document
                            </a>
                        </td>
                    </tr>

                    <div class="modal fade" id="approveModal@(claim.ClaimId)" tabindex="-1">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Approve Claim</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                </div>
                                <form asp-action="ApproveClaim" method="post">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@claim.ClaimId" />
                                    <div class="modal-body">
                                        <div class="form-group">
                                            <label>Approval Message (Optional)</label>
                                            <textarea name="managerMessage" class="form-control" rows="3" placeholder="Add approval comments..."></textarea>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                        <button type="submit" class="btn btn-success">Approve Claim</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                    <div class="modal fade" id="rejectModal@(claim.ClaimId)" tabindex="-1">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Reject Claim</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                </div>
                                <form asp-action="RejectByManager" method="post">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@claim.ClaimId" />
                                    <div class="modal-body">
                                        <div class="form-group">
                                            <label>Rejection Reason (Required)</label>
                                            <textarea name="managerMessage" class="form-control" rows="3" placeholder="Please provide a reason for rejection..." required></textarea>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                        <button type="submit" class="btn btn-danger">Reject Claim</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">No claims awaiting verification.</div>
}