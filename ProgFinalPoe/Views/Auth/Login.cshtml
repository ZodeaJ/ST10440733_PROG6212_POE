@{
    ViewData["Title"] = "Login";
}

<style>
    .bg-professional-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
    }

    .btn-professional-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        font-weight: 500;
    }

        .btn-professional-primary:hover {
            background: linear-gradient(135deg, #5a6fd8 0%, #6a4190 100%);
            color: white;
        }

    .text-professional-primary {
        color: #667eea !important;
    }
</style>

<div class="container-fluid bg-professional-primary min-vh-100 d-flex align-items-center justify-content-center">
    <div class="card shadow" style="width: 100%; max-width: 400px;">
        <div class="card-body p-4">
            <h3 class="text-center mb-4 text-professional-primary">Login</h3>

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <form method="post">
                <div class="mb-3">
                    <label class="form-label">Username</label>
                    <input type="text" class="form-control" name="username" required>
                </div>

                <div class="mb-3">
                    <label class="form-label">Password</label>
                    <input type="password" class="form-control" name="password" required>
                </div>

                <button type="submit" class="btn btn-professional-primary w-100">Login</button>
            </form>

            <div class="mt-4 p-3 bg-light rounded">
                <h6>Demo Accounts:</h6>
                <div class="small">
                    <div><strong>HR:</strong> SK / HR123</div>
                    <div><strong>Lecturer:</strong> GT / lecturer123</div>
                    <div><strong>Coordinator:</strong> TK / coordinator123</div>
                    <div><strong>Manager:</strong> IH / manager123</div>
                </div>
            </div>
        </div>
    </div>
</div>