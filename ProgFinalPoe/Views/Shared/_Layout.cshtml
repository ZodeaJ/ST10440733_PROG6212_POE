<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Lecturer Claim System</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">Lecturer Claim System</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">

                    @if (Context.Session.GetString("UserId") != null)
                    {
                        @if (Context.Session.GetString("Role") == "Lecturer")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Lecturer" asp-action="MakeAClaim">Submit Claim</a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="Lecturer" asp-action="TrackClaimStatus" class="nav-link">Track Claim Status</a>
                            </li>
                        }

                        @if (Context.Session.GetString("Role") == "Coordinator")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="ReviewClaims">Review Claims</a>
                            </li>
                        }

                        @if (Context.Session.GetString("Role") == "Manager")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="VerifyClaims">Verify Claims</a>
                            </li>
                        }

                        @if (Context.Session.GetString("Role") == "HR")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="HR" asp-action="Index">HR Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="HR" asp-action="ManageUsers">Manage Users</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="HR" asp-action="ApprovedClaims">Process Claims</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="HR" asp-action="Invoices">View Invoices</a>
                            </li>
                        }

                        <li class="nav-item ms-auto">
                            <span class="navbar-text text-light me-3">
                                Welcome, @Context.Session.GetString("Name")! (@Context.Session.GetString("Role"))
                            </span>
                        </li>
                        <li class="nav-item">
                            <form asp-controller="Auth" asp-action="Logout" method="post" class="d-inline">
                                <button type="submit" class="btn btn-outline-light btn-sm">Logout</button>
                            </form>
                        </li>
                    }
                    else
                    {

                        <li class="nav-item ms-auto">
                            <a class="nav-link" asp-controller="Auth" asp-action="Login">Login</a>
                        </li>
                    }

                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>