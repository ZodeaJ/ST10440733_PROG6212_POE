@model List<ProgFinalPoe.Models.Claim>

@{
    ViewData["Title"] = "Track Claim Status";
}

<style>
    .btn-professional-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        font-weight: 500;
    }

        .btn-professional-primary:hover {
            background: linear-gradient(135deg, #5a6fd8 0%, #6a4190 100%);
            color: white;
        }
</style>

<h2 class="mb-4" style="color: #333; font-weight: 600; border-bottom: 2px solid #667eea; padding-bottom: 10px;">My Claims</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>Claim ID</th>
                    <th>Month</th>
                    <th>Hours Worked</th>
                    <th>Hourly Rate</th>
                    <th>Amount</th>
                    <th>Description</th>
                    <th>Status</th>
                    <th>Submitted Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var claim in Model)
                {
                    <tr>
                        <td>@claim.ClaimId</td>
                        <td>@claim.Month</td>
                        <td>@claim.HoursWorked</td>
                        <td>R @claim.HourlyRate</td>
                        <td><strong>R @claim.Amount.ToString("F2")</strong></td>
                        <td>@claim.Description</td>
                        <td>
                            @switch (claim.Status)
                            {
                                case ProgFinalPoe.Models.ClaimStatus.Submitted:
                                    <span class="badge bg-warning">Submitted</span>
                                    break;
                                case ProgFinalPoe.Models.ClaimStatus.Forwarded:
                                    <span class="badge bg-info">Forwarded to Manager</span>
                                    break;
                                case ProgFinalPoe.Models.ClaimStatus.Approved:
                                    <span class="badge bg-success">Approved</span>
                                    break;
                                case ProgFinalPoe.Models.ClaimStatus.Rejected:
                                    <span class="badge bg-danger">Rejected</span>
                                    break;
                                default:
                                    <span class="badge bg-secondary">Unknown</span>
                                    break;
                            }
                        </td>
                        <td>@claim.CreatedAt.ToString("yyyy-MM-dd")</td>
                        <td>
                            @if (claim.Status == ProgFinalPoe.Models.ClaimStatus.Rejected || claim.Status == ProgFinalPoe.Models.ClaimStatus.Approved)
                            {
                                <form asp-action="DeleteClaim" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="claimId" value="@claim.ClaimId" />
                                    <button type="submit" class="btn btn-sm btn-danger"
                                            onclick="return confirm('Are you sure you want to delete this claim?')">
                                        Delete
                                    </button>
                                </form>
                            }
                            <a asp-controller="Lecturer" asp-action="ClaimFeedback" asp-route-claimId="@claim.ClaimId" class="btn btn-sm btn-info">View Feedback</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        <h4>No claims submitted yet.</h4>
        <p>You haven't submitted any claims. <a href="@Url.Action("MakeAClaim")">Submit your first claim</a> to get started.</p>
    </div>
}

<div class="mt-3">
    <a href="@Url.Action("MakeAClaim")" class="btn btn-professional-primary">Submit New Claim</a>
</div>