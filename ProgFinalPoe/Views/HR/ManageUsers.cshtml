@model List<ProgFinalPoe.Models.User>

@{
    ViewData["Title"] = "Manage Users";
}

<h2>Manage Users</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="mb-3">
    <a href="@Url.Action("CreateUser")" class="btn btn-primary">Create New User</a>
</div>

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>Username</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Department</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Username</td>
                        <td>@user.Name @user.Surname</td>
                        <td>@user.Email</td>
                        <td>
                            <span class="badge @(user.Role == "HR" ? "bg-danger" : user.Role == "Lecturer" ? "bg-primary" : user.Role == "Coordinator" ? "bg-warning" : "bg-info")">
                                @user.Role
                            </span>
                        </td>
                        <td>@user.Department</td>
                        <td>
                            @if (user.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Inactive</span>
                            }
                        </td>
                        <td>
                            <a href="@Url.Action("EditUser", new { id = user.UserId })" class="btn btn-sm btn-outline-primary">Edit</a>

                            @if (user.IsActive)
                            {
                                <form asp-action="DeleteUser" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@user.UserId" />
                                    <button type="submit" class="btn btn-sm btn-outline-danger"
                                            onclick="return confirm('Are you sure you want to delete this user?')">
                                        Delete
                                    </button>
                                </form>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">No users found.</div>
}

<div class="mt-3">
    <a href="@Url.Action("Index")" class="btn btn-secondary">Back to Dashboard</a>
</div>