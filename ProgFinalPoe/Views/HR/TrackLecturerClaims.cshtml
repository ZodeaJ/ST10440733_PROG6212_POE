@model List<ProgFinalPoe.Models.Claim>
@{
    ViewData["Title"] = "Track Lecturer Claims";
}

<style>
    .bg-professional-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
        color: white !important;
        border: none;
    }

    .bg-professional-accent {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%) !important;
        color: white !important;
        border: none;
    }

    .btn-professional-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        font-weight: 500;
    }

        .btn-professional-primary:hover {
            background: linear-gradient(135deg, #5a6fd8 0%, #6a4190 100%);
            color: white;
        }
</style>

<h2 class="mb-4" style="color: #333; font-weight: 600; border-bottom: 2px solid #667eea; padding-bottom: 10px;">Track Lecturer Claims</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card shadow-sm mb-4">
    <div class="card-header bg-professional-primary text-white">
        <h5 class="mb-0">Select Lecturer</h5>
    </div>
    <div class="card-body">
        <form method="get" asp-action="TrackLecturerClaims" id="lecturerForm">
            <div class="row">
                <div class="col-md-8">
                    <label for="lecturerId" class="form-label">Select Lecturer</label>
                    <select class="form-control" id="lecturerId" name="lecturerId" onchange="this.form.submit()">
                        <option value="">-- Select a Lecturer --</option>
                        @foreach (var lecturer in ViewBag.Lecturers)
                        {
                            <option value="@lecturer.UserId"
                                    selected='@(ViewBag.SelectedLecturer?.UserId == lecturer.UserId)'>
                                @lecturer.Name @lecturer.Surname
                            </option>
                        }
                    </select>
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <button type="submit" class="btn btn-professional-primary w-100">View Claims</button>
                </div>
            </div>
        </form>
    </div>
</div>

@if (ViewBag.SelectedLecturer != null)
{
    <div class="card shadow-sm">
        <div class="card-header bg-professional-accent text-white">
            <h5 class="mb-0">
                Claims for @ViewBag.SelectedLecturer.Name @ViewBag.SelectedLecturer.Surname
                <span class="badge bg-light text-dark ms-2">@Model.Count claims</span>
            </h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Claim ID</th>
                                <th>Month</th>
                                <th>Hours Worked</th>
                                <th>Hourly Rate</th>
                                <th>Amount</th>
                                <th>Description</th>
                                <th>Status</th>
                                <th>Submitted Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var claim in Model)
                            {
                                <tr>
                                    <td class="fw-bold">#@claim.ClaimId</td>
                                    <td>@claim.Month</td>
                                    <td>@claim.HoursWorked</td>
                                    <td>R @claim.HourlyRate</td>
                                    <td><strong>R @claim.Amount.ToString("F2")</strong></td>
                                    <td>@claim.Description</td>
                                    <td>
                                        @switch (claim.Status)
                                        {
                                            case ProgFinalPoe.Models.ClaimStatus.Submitted:
                                                <span class="badge bg-warning">Submitted</span>
                                                break;
                                            case ProgFinalPoe.Models.ClaimStatus.Forwarded:
                                                <span class="badge bg-info">Forwarded to Manager</span>
                                                break;
                                            case ProgFinalPoe.Models.ClaimStatus.Approved:
                                                <span class="badge bg-success">Approved</span>
                                                break;
                                            case ProgFinalPoe.Models.ClaimStatus.Rejected:
                                                <span class="badge bg-danger">Rejected</span>
                                                break;
                                            default:
                                                <span class="badge bg-secondary">Unknown</span>
                                                break;
                                        }
                                    </td>
                                    <td>@claim.CreatedAt.ToString("yyyy-MM-dd")</td>
                                    <td>
                                        <a asp-controller="Lecturer" asp-action="ClaimFeedback" asp-route-claimId="@claim.ClaimId"
                                           class="btn btn-sm btn-info" title="View Feedback">
                                            <i class="fas fa-comments"></i> Feedback
                                        </a>
                                        @if (claim.Status == ProgFinalPoe.Models.ClaimStatus.Approved && string.IsNullOrEmpty(claim.InvoiceNumber))
                                        {
                                            <a href="@Url.Action("CreateInvoice", new { id = claim.ClaimId })"
                                               class="btn btn-sm btn-professional-primary" title="Create Invoice">
                                                <i class="fas fa-file-invoice"></i> Invoice
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <div class="alert alert-info">
                        <h4>No claims found</h4>
                        <p class="mb-0">@ViewBag.SelectedLecturer.Name @ViewBag.SelectedLecturer.Surname hasn't submitted any claims yet.</p>
                    </div>
                </div>
            }
        </div>
    </div>
}
else
{
    <div class="alert alert-warning">
        <h4>No Lecturer Selected</h4>
        <p class="mb-0">Please select a lecturer from the dropdown above to view their claims.</p>
    </div>
}

@section Scripts {
    <script>
        document.getElementById('lecturerId').addEventListener('change', function() {
            if (this.value) {
                document.getElementById('lecturerForm').submit();
            }
        });

        $(document).ready(function() {
            $('#lecturerId').select2({
                placeholder: "Select a lecturer",
                allowClear: true
            });
        });
    </script>
}